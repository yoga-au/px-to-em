{
  "name": "px-to-em",
  "displayName": "Pixel to EM",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:px-to-em.pxToEm",
    "onCommand:px-to-em.emToPx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "px-to-em.pxToEm",
        "title": "PX to EM"
      },
      {
        "command": "px-to-em.emToPx",
        "title": "EM to PX"
      }
    ],
    "configuration": {
      "title": "Pixel to EM",
      "properties": {
        "pixelToEM.basePixel": {
          "type": "number",
          "default": 16,
          "description": "Base pixel/root pixel to be used as reference for EM/REM conversion. Most browser have it at 16px as default value if you don't specifically setup the base/root pixel."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.59.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}

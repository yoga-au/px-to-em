{
  "name": "px-to-em",
  "preview": true,
  "publisher": "yoga-au",
  "author": {
    "name": "Yoga Agung Utama"
  },
  "displayName": "PX to EM",
  "description": "Quickly convert your css pixel value to em value or vice versa with a simple command.",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "css",
    "px",
    "em",
    "styling",
    "style",
    "converter",
    "conversion"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#222222",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yoga-au/px-to-em.git"
  },
  "bugs": {
    "url": "https://github.com/yoga-au/px-to-em/issues",
    "email": "yogaagung.utama@gmail.com"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "activationEvents": [
    "onCommand:px-to-em.pxToEm",
    "onCommand:px-to-em.emToPx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "px-to-em.pxToEm",
        "title": "Convert PX to EM Value",
        "shortTitle": "PX to EM"
      },
      {
        "command": "px-to-em.emToPx",
        "title": "Convert EM/REM to PX Value",
        "shortTitle": "EM/REM to PX"
      }
    ],
    "configuration": {
      "title": "PX to EM",
      "properties": {
        "pxToEm.basePixel": {
          "type": "number",
          "default": 16,
          "description": "Base PX/root PX to be used as reference for EM/REM conversion. Most browser have it at 16px as default value if you don't specifically setup the base/root px."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.59.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
